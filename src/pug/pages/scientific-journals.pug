//-1. Create a new-page.pug in PAGES folder
//-1.1. Add a layout and variables to new-page.pug using one of the layout located in the folder LAYOUT
extends ../layout/layout-inner
block variables
    - var description = 'Scientific Journals - Tambov State Technical University'
    - var title = 'Scientific Journals'
    - var pageClass = 'scientific-journals-page'
    - var sectionKey = 'research'

//-1.2. Add page content structure
block content
    //-2. Create in blocks > a folder (name-of-new-block-folder) > and pug and scss files inside this folder
    //-2.1 Import created scss file to blocks.scss
    .breadcrumbs.bt-blue
        a(href="index.html" class="breadcrumbs__link") Home
        a(href="research-activities.html" class="breadcrumbs__link breadcrumbs__section-link") Research
        a(href="#" class="breadcrumbs__link breadcrumbs__link--active") Scientific Journals
    section.research
        h1.section__title Scientific Journals
        .colums
            aside.colums__col30
                include ../../blocks/sidebar/sidebar
            main.colums__col70
                .content
                    ul
                        li
                            a(href="http://vestnik.tstu.ru/" target="_blank") Transactions of the TSTU - Four-Language Scientific-Theoretical and Applied Multidisciplinary Journal
                        li
                            a(href="http://vernadsky.tstu.ru/en/" target="_blank") Journal "Problems of Contemporary Science and Practice. Vernadsky University"
                        li
                            a(href="http://amt.tstu.ru/en/" target="_blank") Journal of Advanced Materials and Technologies
                        li
                            a(href="http://pravo.tstu.ru/" target="_blank") Journal "Law: History and Modernity"