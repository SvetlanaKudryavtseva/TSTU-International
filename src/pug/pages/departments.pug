//-1. Create a new-page.pug in PAGES folder
//-1.1. Add a layout and variables to new-page.pug using one of the layout located in the folder LAYOUT
extends ../layout/layout-inner
block variables
    - var description = 'Departments of Tambov State Technical University'
    - var title = 'Departments of Tambov State Technical University'
    - var pageClass = 'departments-page'
    - var title_short = 'Departments'
    - var sectionKey = 'education'

//-1.2. Add page content structure
block content
    //-2. Create in blocks > a folder (name-of-new-block-folder) > and pug and scss files inside this folder
    //-2.1 Import created scss file to blocks.scss
    .breadcrumbs.bt-blue
        a(href="index.html" class="breadcrumbs__link") Home
        a(href="institutes-and-faculties.html" class="breadcrumbs__link breadcrumbs__section-link") Education
        a(href="#" class="breadcrumbs__link breadcrumbs__link--active") Departments
    section.name-of-section
        main
            .content
                h2.section__inner-title2 Departments
                include ../../blocks/departments/departments

