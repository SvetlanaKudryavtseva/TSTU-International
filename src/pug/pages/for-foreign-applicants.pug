extends ../layout/layout-inner
block variables
    - var description = 'For Foreign Applicants - Tambov State Technical University, standards agreed by the European Commission, the Council of Europe and UNESCO'
    - var title = 'For Foreign Applicants'
    - var pageClass = 'for-foreign-applicants-page'
    - var sectionKey = 'international'

block content
    .breadcrumbs.bt-blue
        a(href="index.html" class="breadcrumbs__link") Home
        a(href="tstu-international.html" class="breadcrumbs__link breadcrumbs__section-link") TSTU International
        a(href="#" class="breadcrumbs__link breadcrumbs__link--active") For Foreign Applicants
    section 
        h1.section__title For Foreign Applicants
        main.content
            include ../../blocks/about/about
            include ../../blocks/instituteInfo/instituteInfo
            include ../../blocks/memo/memo
            include ../../blocks/course/course
            h2#application-documents.section__indextitle Documents Required to Study at TSTU
            ol
                li
                    a(href='assets/pdf/appl_form.doc' target='_blank') Application form;
                li Medical certificate, HIV-test, X-ray results (filled in Russian and English languages) made not later than in 6 months before coming to Russia;
                li Legalized educational documents (School certificate, Bachelor&apos;s certificate, Master&rsquo;s certificate);
                li Notarized and legalized translations of educational documents (2 copies). If the sheet with estimations goes separately from the Certificate (Diploma) it is necessary to make 2 notarized translations of it (2 copies). The name in the translation must be like in VISA;
                li 6 photos 3x4 (mat paper) with signature on the over side;
                li International passport;
                li Assignment to study from the Ministry of Education of Russian Federation or the Contract with TSTU;
                li Other documents at will of a candidate, confirming his training.
            div
                p
                    | Please, apply to the foreign students&rsquo; admission office with any questions: E-mail: 
                    a(href='mailto:tstu04@yandex.com') tstu04@yandex.com

